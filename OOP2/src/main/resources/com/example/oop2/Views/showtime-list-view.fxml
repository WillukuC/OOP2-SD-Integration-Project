<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" minHeight="-Infinity" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop2.Controllers.ShowtimeListController">
   <HBox alignment="CENTER" prefHeight="12.0">
      <Label alignment="CENTER" text="Showtime List" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </HBox>
      <HBox prefHeight="320.0">
         <VBox alignment="CENTER" prefHeight="200.0">
            <TableView fx:id="showtimeTableView" prefHeight="320.0" prefWidth="475.0">
            <VBox.margin>
               <Insets right="10.0" />
            </VBox.margin>
         </TableView>
         </VBox>
         <VBox>
         <Spinner fx:id="ticketSpinner" editable="true" prefHeight="25.0" prefWidth="100.0">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Spinner>
            <Button fx:id="purchaseButton" layoutX="479.0" layoutY="224.0" mnemonicParsing="false" onAction="#onBuyTicketButtonClick" prefHeight="25.0" prefWidth="100.0" text="Purchase">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Button>
            <Button fx:id="updateButton" layoutX="479.0" layoutY="292.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" prefWidth="100.0" text="Update">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Button>
            <Button fx:id="deleteButton" layoutX="479.0" layoutY="371.0" mnemonicParsing="false" onAction="#onDeleteButtonClick" prefWidth="100.0" text="Delete">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Button>
            <Button fx:id="addButton" layoutX="479.0" layoutY="332.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefWidth="100.0" text="Add" />
         </VBox>
      <padding>
         <Insets left="10.0" right="10.0" />
      </padding>
      </HBox>
   <padding>
      <Insets bottom="10.0" />
   </padding>
</VBox>
